<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/lonn_view_footer_ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/lonn_view_footer_iv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lonn_ic_rotate"/>

        <TextView
            android:id="@+id/lonn_view_footer_tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="#6C6C6C"
            android:text="正在加载"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lonn_view_footer_ll_failure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/lonn_view_footer_tv_failure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="#6C6C6C"
            android:text="加载失败，点击重试"/>

    </LinearLayout>



</RelativeLayout>
