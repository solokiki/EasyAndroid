<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lonn_view_title_layout_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 左 -->

    <LinearLayout
        android:id="@+id/lonn_view_title_layout_left1"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal" >


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lonn_view_title_layout_left2"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/lonn_view_title_layout_left1"
        android:gravity="center"
        android:orientation="horizontal" >


    </LinearLayout>

    <!-- 右 -->

    <LinearLayout
        android:id="@+id/lonn_view_title_layout_right1"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal" >


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lonn_view_title_layout_right2"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/lonn_view_title_layout_right1"
        android:gravity="center"
        android:orientation="horizontal" >


    </LinearLayout>

    <!-- 中 -->

    <LinearLayout
        android:id="@+id/lonn_view_title_layout_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/lonn_view_title_layout_left2"
        android:layout_toLeftOf="@+id/lonn_view_title_layout_right2"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lonn_view_title_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="20sp"
            android:textColor="#4C4C4C"
            android:text="Title" />

    </LinearLayout>

</RelativeLayout>